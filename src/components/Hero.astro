<section class="hero">
    <div class="hero-content">
        <div class="logo-container">
            <!-- Updated logo path to use local file -->
            <img
                src="/images/huev-on-logo.png"
                alt="Huev-on Logo"
                class="logo"
            />
        </div>
        <h1 class="hero-title">Los Mejores Huevos de Calidad Premium</h1>
        <p class="hero-subtitle">Frescura garantizada, sabor incomparable</p>
        <a href="#productos" class="cta-button">Descubre Nuestros Productos</a>
    </div>
    <div class="hero-background"></div>
</section>

<style>
    .hero {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        background: linear-gradient(
            135deg,
            #fef3c7 0%,
            #fed7aa 50%,
            #fdba74 100%
        );
    }

    .hero-background {
        position: absolute;
        inset: 0;
        background-image: radial-gradient(
                circle at 20% 50%,
                rgba(251, 191, 36, 0.3) 0%,
                transparent 50%
            ),
            radial-gradient(
                circle at 80% 80%,
                rgba(245, 158, 11, 0.3) 0%,
                transparent 50%
            );
        animation: backgroundPulse 8s ease-in-out infinite;
    }

    @keyframes backgroundPulse {
        0%,
        100% {
            opacity: 0.5;
        }
        50% {
            opacity: 0.8;
        }
    }

    .hero-content {
        position: relative;
        z-index: 10;
        text-align: center;
        padding: 2rem;
        max-width: 1200px;
    }

    .logo-container {
        margin-bottom: 2rem;
        animation: logoFloat 3s ease-in-out infinite;
    }

    @keyframes logoFloat {
        0%,
        100% {
            transform: translateY(0px) scale(1);
        }
        50% {
            transform: translateY(-20px) scale(1.05);
        }
    }

    .logo {
        width: 280px;
        height: auto;
        filter: drop-shadow(0 10px 30px rgba(245, 158, 11, 0.4));
        transition: filter 0.3s ease;
    }

    .logo:hover {
        filter: drop-shadow(0 15px 40px rgba(245, 158, 11, 0.6));
    }

    .hero-title {
        font-size: clamp(2rem, 5vw, 3.5rem);
        color: var(--color-dark);
        margin-bottom: 1rem;
        animation: fadeInUp 1s ease-out 0.3s both;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .hero-subtitle {
        font-size: clamp(1.2rem, 3vw, 1.8rem);
        color: #92400e;
        margin-bottom: 2rem;
        animation: fadeInUp 1s ease-out 0.6s both;
    }

    .cta-button {
        display: inline-block;
        padding: 1rem 2.5rem;
        background: linear-gradient(
            135deg,
            var(--color-primary),
            var(--color-secondary)
        );
        color: var(--color-white);
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 50px;
        box-shadow: 0 10px 30px rgba(245, 158, 11, 0.3);
        transition: all 0.3s ease;
        animation: fadeInUp 1s ease-out 0.9s both;
    }

    .cta-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(245, 158, 11, 0.5);
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 768px) {
        .logo {
            width: 200px;
        }
    }
</style>
